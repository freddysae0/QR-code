---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Qr code">
  <main>
    <div class="qr-card">
      <img src="/images/image-qr-code.png" alt="" />
      <div class="text-container">
        <h3>Improve your front-end skills by building projects</h3>
        <p>
          Scan the QR code to visit Frontend Mentor and take your coding skills
          to the next level
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    background-color: aliceblue;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  img {
    height: 270px;
    width: 270px;
    margin-top: 15px;
    border-radius: 10px;
  }

  .qr-card {
    box-shadow: 0px 10px 25px rgb(230, 230, 230);
    border-radius: 10px;
    height: 480px;
    width: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;

    background: white;
  }
  h3 {
    font-family: Arial, Helvetica, sans-serif;
    color: rgb(46, 5, 63);
    font-weight: 900;
  }
  p {
    font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
  }
  .text-container {
    font-weight: 500;
    color: rgb(81, 81, 81);
    text-align: center;
    padding: 30px;
    padding-top: 15px;
    font-size: 14px;
    text-wrap: pretty;
  }
</style>
